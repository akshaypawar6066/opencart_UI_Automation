<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Open Cart Suite" parallel="tests" thread-count="2">
	<test name="Chrome Test" parallel="methods" thread-count="3">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="osName" value="windows"></parameter>
		<groups>
			<run>
				<include name="Sanity"></include>
			</run>
		</groups>
		<classes>
			<class name="tests.RegistrationTest" />
			<class name="tests.LoginTest" />
		</classes>
	</test>
	<test name="Edge Test" parallel="methods" thread-count="3">
		<parameter name="browser" value="edge"></parameter>
		<parameter name="osName" value="Linux"></parameter>
		<groups>
			<run>
				<include name="Sanity"></include>
			</run>
		</groups>
		<classes>
			<class name="tests.RegistrationTest" />
			<class name="tests.LoginTest" />
		</classes>
	</test>
</suite> 
