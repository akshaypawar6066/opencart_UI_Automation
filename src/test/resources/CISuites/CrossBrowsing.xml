<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Open Cart Suite" parallel="tests" thread-count="2">
	<listeners>
		<listener class-name="liseners.ListenerClass"></listener>
		<!--listener class-name="liseners.MyAnnotationTransformer"></listener>-->
	</listeners>
	<test name="Chrome Test" parallel="methods" thread-count="3">
		<parameter name="browser" value="Chrome" />
		<parameter name="osName" value="Linux" />
		<parameter name="remoteExecution" value="false" />
		<parameter name="remoteURL" value="http://localhost:4444" />
		<groups>
			<run>
				<include name="Sanity"></include>
				<include name="DataDriven"></include>
			</run>
		</groups>
		<classes>
			<class name="tests.RegistrationTest" />
			<class name="tests.LoginTest" />
		</classes>
	</test>
	<test name="Edge Test" parallel="methods" thread-count="3">
		<parameter name="browser" value="Edge" />
		<parameter name="osName" value="Linux" />
		<parameter name="remoteExecution" value="false" />
		<parameter name="remoteURL" value="http://localhost:4444" />
		<groups>
			<run>
				<include name="Sanity"></include>
				<include name="DataDriven"></include>
			</run>
		</groups>
		<classes>
			<class name="tests.RegistrationTest" />
			<class name="tests.LoginTest" />
		</classes>
	</test>
</suite> 
